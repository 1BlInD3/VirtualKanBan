<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:background="@drawable/highlight_selected">

    <TextView
        android:id="@+id/child_kontener_text"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:text="kontener"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/child_polc_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:paddingStart="5dp"
        android:text="Polc"
        app:layout_constraintStart_toEndOf="@+id/child_kontener_text"
        app:layout_constraintTop_toTopOf="@+id/child_kontener_text" />

    <TextView
        android:id="@+id/child_ido_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:paddingStart="5dp"
        android:text="Igénylés ideje"
        app:layout_constraintStart_toEndOf="@+id/child_polc_text"
        app:layout_constraintTop_toTopOf="@+id/child_kontener_text" />

    <TextView
        android:id="@+id/child_tetelszam_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:paddingStart="5dp"
        android:text="tételszam"
        app:layout_constraintStart_toEndOf="@+id/child_ido_text"
        app:layout_constraintTop_toTopOf="@+id/child_kontener_text" />
</androidx.constraintlayout.widget.ConstraintLayout>