<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:background="@drawable/highlight_selected">

    <TextView
        android:id="@+id/child_kontener_text"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="1dp"
        android:text="kontener"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/child_ido_text"
        app:layout_constraintTop_toTopOf="@+id/child_tetelszam_text" />

    <TextView
        android:id="@+id/child_polc_text"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="Polc"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/child_ido_text"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Igénylés ideje"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/child_tetelszam_text"
        app:layout_constraintTop_toTopOf="@+id/child_tetelszam_text" />

    <TextView
        android:id="@+id/child_tetelszam_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="tételszam"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/child_polc_text"
        app:layout_constraintTop_toTopOf="@+id/child_polc_text" />
</androidx.constraintlayout.widget.ConstraintLayout>