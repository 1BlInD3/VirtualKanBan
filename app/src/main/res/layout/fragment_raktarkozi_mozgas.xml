<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.fusetech.virtualkanban.viewmodels.RaktarkoziViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.RaktarkoziMozgasFragment"
        android:background="@color/pocakszin2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="24dp"
            android:background="@color/pocakszin4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="Raktárközi mozgatás"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/raktarPolcMozgas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/editbuttn"
            android:ems="14"
            android:hint="Kérem a polc kódját"
            android:padding="4dp"
            android:text="@={viewModel.raktar}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

        <HorizontalScrollView
            android:id="@+id/horizontalView"
            android:layout_width="318dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/raktarPolcMozgas">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mozgasRecycler"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout666" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout666"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView7"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        app:cardBackgroundColor="@color/pocakszin4"
                        app:cardCornerRadius="1dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:maxLines="1"
                            android:text="Mennyiség"
                            android:textAlignment="textStart"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView8"
                        android:layout_width="80dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="4dp"
                        app:cardBackgroundColor="@color/pocakszin4"
                        app:cardCornerRadius="1dp"
                        app:layout_constraintStart_toEndOf="@+id/cardView7"
                        app:layout_constraintTop_toTopOf="@+id/cardView7">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Mértékegység"
                            android:textAlignment="textStart"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView9"
                        android:layout_width="180dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="2dp"
                        app:cardBackgroundColor="@color/pocakszin4"
                        app:cardCornerRadius="2dp"
                        app:layout_constraintStart_toEndOf="@+id/cardView13"
                        app:layout_constraintTop_toTopOf="@+id/cardView8">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:paddingStart="10dp"
                            android:text="Megnevezés1"
                            android:textAlignment="textStart"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView10"
                        android:layout_width="180dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="2dp"
                        app:cardBackgroundColor="@color/pocakszin4"
                        app:cardCornerRadius="2dp"
                        app:layout_constraintStart_toEndOf="@+id/cardView9"
                        app:layout_constraintTop_toTopOf="@+id/cardView9">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:maxLines="1"
                            android:paddingStart="10dp"
                            android:text="Megnevezés2"
                            android:textAlignment="textStart"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView11"
                        android:layout_width="150dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="2dp"
                        app:cardBackgroundColor="@color/pocakszin4"
                        app:cardCornerRadius="2dp"
                        app:layout_constraintStart_toEndOf="@+id/cardView10"
                        app:layout_constraintTop_toTopOf="@+id/cardView10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:maxLines="1"
                            android:paddingStart="10dp"
                            android:text="IntRem"
                            android:textAlignment="textStart"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView12"
                        android:layout_width="100dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="2dp"
                        app:cardBackgroundColor="@color/pocakszin4"
                        app:cardCornerRadius="2dp"
                        app:layout_constraintStart_toEndOf="@+id/cardView11"
                        app:layout_constraintTop_toTopOf="@+id/cardView10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:maxLines="1"
                            android:paddingStart="10dp"
                            android:text="Állapot"
                            android:textAlignment="textStart"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView13"
                        android:layout_width="150dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginBottom="2dp"
                        app:cardBackgroundColor="@color/pocakszin4"
                        app:cardCornerRadius="2dp"
                        app:layout_constraintStart_toEndOf="@+id/cardView8"
                        app:layout_constraintTop_toTopOf="@+id/cardView10">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:maxLines="1"
                            android:paddingStart="10dp"
                            android:text="Cikkszám"
                            android:textAlignment="textStart"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                    </androidx.cardview.widget.CardView>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/textView46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Cél rakhely megadása : "
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalView" />

        <EditText
            android:id="@+id/raktarCelMozgas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/editbuttn"
            android:ems="14"
            android:inputType="textPersonName"
            android:padding="4dp"
            android:text="@={viewModel.celRaktar}"
            android:hint="Cél rakhely"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView46" />

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyle"
            android:layout_width="77dp"
            android:layout_height="90dp"
            android:layout_marginTop="100dp"
            android:indeterminate="true"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
            app:layout_constraintStart_toStartOf="@+id/horizontalView"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
